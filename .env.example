# Backend environment variables (no secrets)
# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Request controls
REQUEST_TIMEOUT_MS=10000
REQUEST_RETRIES=2
REQUEST_BACKOFF_MS=300
REQUEST_BACKOFF_FACTOR=2
REQUEST_BREAKER_THRESHOLD=6
REQUEST_BREAKER_COOLDOWN_MS=30000

# Toolkit upstream
EXPO_PUBLIC_TOOLKIT_URL=https://toolkit.rork.com
# TOOLKIT_API_KEY=  # set in deployment secrets

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=60

# Auth
# JWT_SECRET=  # set in deployment secrets

# Observability
LOG_LEVEL=info
GIT_SHA=
