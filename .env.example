# Environment
NODE_ENV=production
PORT=8080

# Logging
LOG_LEVEL=INFO
LOG_SIGNING_KEY=change_me_to_a_secure_random_string
EXPO_PUBLIC_LOG_SIGNING_KEY=change_me_to_a_secure_random_string
EXPO_PUBLIC_LOG_SALT=change_me_to_a_secure_random_string
EXPO_PUBLIC_LOG_INGEST_URL=http://localhost:8080/api/ingest/logs
EXPO_PUBLIC_LOG_LEVEL=INFO

# Retention (days)
RETENTION_SECURITY_DAYS=90
RETENTION_ERROR_DAYS=90
RETENTION_WARN_DAYS=90
RETENTION_NOTICE_DAYS=30
RETENTION_INFO_DAYS=30
RETENTION_DEBUG_DAYS=7
RETENTION_TRACE_DAYS=1

# OpenTelemetry (optional)
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_SERVICE_NAME=linguamate-api

# Loki (optional)
LOKI_ENDPOINT=
LOKI_USERNAME=
LOKI_PASSWORD=

# OpenSearch (optional)
OPENSEARCH_ENDPOINT=
OPENSEARCH_USER=
OPENSEARCH_PASS=
OPENSEARCH_INDEX_PREFIX=logs-

# Datadog (optional)
DATADOG_API_KEY=
DATADOG_SITE=datadoghq.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Security
# CORS_ORIGIN: Comma-separated list of allowed origins. Use "*" only in development!
# In production, specify exact domains: https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGIN=*
ALLOWED_HOSTS=localhost,127.0.0.1
# JWT_SECRET: CRITICAL - Use a strong, random secret (min 32 chars). Generate with: openssl rand -base64 32
JWT_SECRET=change_me_please_super_secret
# TOOLKIT_API_KEY: API key for external toolkit service
TOOLKIT_API_KEY=
EXPO_PUBLIC_TOOLKIT_URL=https://toolkit.rork.com

# EAS Build Configuration
APP_ENV=development
APP_VERSION=1.0.0
ANDROID_VERSION_CODE=1
IOS_BUILD_NUMBER=1
EAS_PROJECT_ID=<YOUR-EAS-PROJECT-ID>
EAS_UPDATE_URL=

# Analytics & Monitoring
EXPO_PUBLIC_SENTRY_DSN=
SENTRY_DSN=
SENTRY_AUTH_TOKEN=
ANALYTICS_ENABLED=0
EXPO_PUBLIC_POSTHOG_KEY=
EXPO_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Monetization
EXPO_PUBLIC_RC_API_KEY=

# Feature Flags (optional)
EXPO_PUBLIC_STATSIG_CLIENT_KEY=

# API Configuration
API_BASE_URL=http://localhost:3000
EXPO_PUBLIC_API_URL=http://localhost:8081

# --- MCP (Model Context Protocol) Configuration ---
# GitHub MCP (required for agent-based PR/issue operations)
GITHUB_TOKEN=

# Database / Cache (optional; read-only users recommended)
DATABASE_URL_RO=postgres://readonly:password@host:5432/linguamate
REDIS_URL_RO=rediss://readonly:password@host:6380/0

# Observability (optional; for crash-to-PR workflows)
SENTRY_DSN_RO=

# Deployment (optional; for build orchestration)
VERCEL_TOKEN=
EAS_TOKEN=

# Monetisation (optional; read-only/limited scopes)
STRIPE_API_KEY_RO=
REVENUECAT_API_KEY_RO=
