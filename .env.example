# Environment
NODE_ENV=production
PORT=8080

# Logging
LOG_LEVEL=INFO
LOG_SIGNING_KEY=change_me_to_a_secure_random_string
EXPO_PUBLIC_LOG_SIGNING_KEY=change_me_to_a_secure_random_string
EXPO_PUBLIC_LOG_SALT=change_me_to_a_secure_random_string
EXPO_PUBLIC_LOG_INGEST_URL=http://localhost:8080/api/ingest/logs
EXPO_PUBLIC_LOG_LEVEL=INFO

# Retention (days)
RETENTION_SECURITY_DAYS=90
RETENTION_ERROR_DAYS=90
RETENTION_WARN_DAYS=90
RETENTION_NOTICE_DAYS=30
RETENTION_INFO_DAYS=30
RETENTION_DEBUG_DAYS=7
RETENTION_TRACE_DAYS=1

# OpenTelemetry (optional)
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_SERVICE_NAME=linguamate-api

# Loki (optional)
LOKI_ENDPOINT=
LOKI_USERNAME=
LOKI_PASSWORD=

# OpenSearch (optional)
OPENSEARCH_ENDPOINT=
OPENSEARCH_USER=
OPENSEARCH_PASS=
OPENSEARCH_INDEX_PREFIX=logs-

# Datadog (optional)
DATADOG_API_KEY=
DATADOG_SITE=datadoghq.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=*
ALLOWED_HOSTS=localhost,127.0.0.1
