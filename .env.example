# Backend Environment Configuration
# Copy this file to .env and fill in your values

# Environment
NODE_ENV=development

# Server Configuration
PORT=3000
API_BASE_URL=http://localhost:3000/api

# Security
JWT_SECRET=your-secret-key-here-min-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
ENCRYPTION_KEY=your-encryption-key-min-32-chars

# CORS Configuration (comma-separated for multiple origins)
CORS_ALLOWED_ORIGINS=http://localhost:8081,http://localhost:19006,http://localhost:3000
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=60
RATE_LIMIT_MAX_LOGIN_ATTEMPTS=5

# External Services
EXPO_PUBLIC_TOOLKIT_URL=https://toolkit.rork.com
TOOLKIT_API_KEY=your-toolkit-api-key

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# Monitoring (Optional)
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.2
SENTRY_PROFILES_SAMPLE_RATE=0.1

# Feature Flags
STT_MOCK_ENABLED=true
ENABLE_REQUEST_LOGGING=true
ENABLE_SECURITY_HEADERS=true

# Database (when implemented)
# DATABASE_URL=postgresql://user:pass@localhost:5432/dbname
# REDIS_URL=redis://localhost:6379

# File Upload Limits
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=audio/wav,audio/mp3,audio/webm

# Session Configuration
SESSION_TIMEOUT_MINUTES=30
MAX_CONCURRENT_SESSIONS=3

# Build Info
GIT_COMMIT_SHA=
EXPO_PUBLIC_COMMIT_SHA=