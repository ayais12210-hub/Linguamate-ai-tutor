{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/workspace"],
      "env": {}
    },
    "search": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-search", "--max-results", "20"],
      "env": {}
    },
    "http": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-http"],
      "env": {}
    },
    "openai": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-openai"],
      "env": {
        "OPENAI_API_KEY": "${OPENAI_API_KEY}"
      }
    },
    "whisper": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-whisper"],
      "env": {
        "OPENAI_API_KEY": "${OPENAI_API_KEY}"
      }
    },
    "tts": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-elevenlabs"],
      "env": {
        "ELEVENLABS_API_KEY": "${ELEVENLABS_API_KEY}"
      }
    },
    "postgres": {
      "command": "node",
      "args": [".mcp/postgres-mcp-server/dist/index.js"],
      "env": {
        "POSTGRES_URL": "${POSTGRES_URL}"
      }
    },
    "redis": {
      "command": "node",
      "args": [".mcp/redis-mcp-server/dist/index.js"],
      "env": {
        "REDIS_URL": "${REDIS_URL}"
      }
    },
    "github": {
      "command": "node",
      "args": [".mcp/github-mcp-server/dist/index.js"],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      }
    },
    "sentry": {
      "command": "node",
      "args": [".mcp/sentry-mcp-server/dist/index.js"],
      "env": {
        "SENTRY_DSN": "${SENTRY_DSN}",
        "SENTRY_ORG": "${SENTRY_ORG}",
        "SENTRY_PROJECT": "${SENTRY_PROJECT}",
        "SENTRY_AUTH_TOKEN": "${SENTRY_AUTH_TOKEN}"
      }
    },
    "stripe": {
      "command": "node",
      "args": [".mcp/stripe-mcp-server/dist/index.js"],
      "env": {
        "STRIPE_SECRET_KEY": "${STRIPE_SECRET_KEY}"
      }
    },
    "vercel": {
      "command": "node",
      "args": [".mcp/vercel-mcp-server/dist/index.js"],
      "env": {
        "VERCEL_TOKEN": "${VERCEL_TOKEN}"
      }
    },
    "revenuecat": {
      "command": "node",
      "args": [".mcp/revenuecat-mcp-server/dist/index.js"],
      "env": {
        "REVENUECAT_API_KEY": "${REVENUECAT_API_KEY}"
      }
    }
  }
}