{
  "mcpServers": {
    "fs-local": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-filesystem"],
      "env": { "ROOT": "${workspaceFolder}" },
      "permissions": {
        "read": ["app", "components", "backend", "lib", "tests", "schemas", ".github", "docs"],
        "write": ["tests", "docs", ".github", "schemas"]
      }
    },
    "http": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-http"],
      "env": {
        "MCP_HTTP_ALLOWED_HOSTS": "api.coingecko.com,registry.npmjs.org,en.wikipedia.org,raw.githubusercontent.com,localhost,127.0.0.1"
      }
    }
  }
}