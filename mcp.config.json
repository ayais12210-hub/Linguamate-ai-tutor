{
  "$schema": "https://modelcontextprotocol.io/schemas/2024-10-01/config.schema.json",
  "clients": [
    {
      "name": "linguamate-mcp",
      "servers": [
        {
          "id": "ingest",
          "transport": {
            "stdio": {
              "command": "python3",
              "args": ["mcp_servers/ingest_server.py"]
            }
          },
          "env": {
            "MCP_INGEST_ALLOW_DOMAINS": "bbc.co.uk,aljazeera.com,apnews.com,reuters.com"
          }
        },
        {
          "id": "gitops",
          "transport": {
            "stdio": {
              "command": "python3",
              "args": ["mcp_servers/gitops_server.py"]
            }
          },
          "env": {
            "GITHUB_TOKEN": "${env:GITHUB_TOKEN}"
          }
        },
        {
          "id": "cursor",
          "transport": {
            "stdio": {
              "command": "python3",
              "args": ["mcp_servers/cursor_server.py"]
            }
          },
          "env": {
            "CURSOR_API_KEY": "${env:CURSOR_API_KEY}"
          }
        }
      ]
    }
  ]
}