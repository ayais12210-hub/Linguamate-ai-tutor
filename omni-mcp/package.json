{
  "name": "omni-mcp",
  "version": "1.0.0",
  "description": "Production-grade MCP framework for orchestrating multiple MCP servers",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "pnpm -C apps/orchestrator dev",
    "build": "pnpm -C apps/orchestrator build",
    "lint": "eslint . --max-warnings 10",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "health": "pnpm tsx scripts/health.ts",
    "health:ci": "pnpm tsx scripts/health.ts --ci",
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check .",
    "dotenv:gen": "tsx scripts/generate-dotenv.ts",
    "dotenv:check": "tsx scripts/generate-dotenv.ts --check",
    "clean": "rm -rf node_modules apps/*/node_modules dist coverage",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@types/opossum": "^8.1.9",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.54.0",
    "globby": "^15.0.0",
    "husky": "^9.1.7",
    "limiter": "^3.0.0",
    "lint-staged": "^16.2.3",
    "prettier": "^3.1.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "yaml": "^2.8.1"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@opentelemetry/api": "^1.6.0",
    "@opentelemetry/auto-instrumentations-node": "^0.40.0",
    "@opentelemetry/exporter-jaeger": "^1.17.0",
    "@opentelemetry/exporter-prometheus": "^0.45.0",
    "@opentelemetry/resources": "^1.30.1",
    "@opentelemetry/sdk-node": "^0.45.0",
    "@opentelemetry/semantic-conventions": "^1.37.0",
    "dotenv": "^16.3.0",
    "express-rate-limit": "^7.1.0",
    "fastify": "^4.24.0",
    "js-yaml": "^4.1.0",
    "opossum": "^8.0.0",
    "pino": "^8.16.0",
    "pino-pretty": "^10.2.0",
    "prom-client": "^15.0.0",
    "undici": "^7.16.0",
    "zod": "^3.22.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,yaml,yml}": [
      "prettier --write"
    ],
    "servers/*.yaml": [
      "pnpm tsx scripts/generate-dotenv.ts --check"
    ]
  }
}