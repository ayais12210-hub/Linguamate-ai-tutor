{
  "name": "omni-mcp",
  "version": "1.0.0",
  "description": "Production-grade MCP framework for orchestrating multiple MCP servers",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "pnpm -C apps/orchestrator dev",
    "build": "pnpm -C apps/orchestrator build",
    "lint": "eslint . --max-warnings 10",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "health": "pnpm tsx scripts/health.ts",
    "health:ci": "pnpm tsx scripts/health.ts --ci",
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check .",
    "clean": "rm -rf node_modules apps/*/node_modules dist coverage",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.9.1",
    "@types/opossum": "^8.1.9",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.38.0",
    "globby": "^15.0.0",
    "husky": "^9.1.7",
    "limiter": "^3.0.0",
    "lint-staged": "^16.2.5",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "yaml": "^2.8.1"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.65.0",
    "@opentelemetry/exporter-jaeger": "^2.1.0",
    "@opentelemetry/exporter-prometheus": "^0.206.0",
    "@opentelemetry/resources": "^2.1.0",
    "@opentelemetry/sdk-node": "^0.206.0",
    "@opentelemetry/semantic-conventions": "^1.37.0",
    "dotenv": "^17.2.3",
    "express-rate-limit": "^8.1.0",
    "fastify": "^5.6.1",
    "js-yaml": "^4.1.0",
    "opossum": "^9.0.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "prom-client": "^15.1.3",
    "zod": "^4.1.12"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,yaml,yml}": [
      "prettier --write"
    ],
    "servers/*.yaml": [
      "pnpm tsx scripts/generate-dotenv.ts --check"
    ]
  }
}