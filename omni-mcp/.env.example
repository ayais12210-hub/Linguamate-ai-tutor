# Linguamate.ai Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASES & STORAGE
# =============================================================================

# Primary PostgreSQL Database (Neon)
NEON_DATABASE_URL=postgresql://username:password@hostname:port/database?sslmode=require
NEON_POOLER_URL=postgresql://username:password@hostname:port/database?sslmode=require

# Supabase (Auth, Storage, Realtime)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# =============================================================================
# OBSERVABILITY & MONITORING
# =============================================================================

# Sentry (Error tracking & Performance monitoring)
SENTRY_DSN=https://your-dsn@sentry.io/project-id
SENTRY_ORG=your-org
SENTRY_PROJECT=linguamate
SENTRY_AUTH_TOKEN=your-auth-token

# =============================================================================
# LLM & AI SERVICES
# =============================================================================

# OpenRouter (Meta-LLM gateway with routing)
OPENROUTER_API_KEY=sk-or-v1-...
OPENROUTER_APP_NAME=Linguamate
OPENROUTER_APP_URL=https://linguamate.ai

# Google Gemini (Multimodal LLM)
GEMINI_API_KEY=AIza...
GEMINI_PROJECT_ID=your-project-id

# Qwen Max (High-context LLM for long content)
QWEN_MAX_API_KEY=sk-...
QWEN_MAX_BASE_URL=https://dashscope.aliyuncs.com

# DeepSeek R1 (Reasoning LLM for grading/rubrics)
DEEPSEEK_API_KEY=sk-...
DEEPSEEK_BASE_URL=https://api.deepseek.com

# Grok (Web-aware LLM for culture notes)
GROK_API_KEY=xai-...
GROK_BASE_URL=https://api.x.ai

# Minimax (Fast paraphrases/simplifications)
MINIMAX_API_KEY=...
MINIMAX_GROUP_ID=your-group-id

# =============================================================================
# SPEECH & AUDIO SERVICES
# =============================================================================

# ElevenLabs (TTS voices)
ELEVENLABS_API_KEY=sk_...
ELEVENLABS_VOICE_ID=your-default-voice-id

# Windsor (AI voiceover QA)
WINDSOR_API_KEY=windsor_...

# =============================================================================
# CONTENT & CRAWLING
# =============================================================================

# Firecrawl (Web content extraction)
FIRECRAWL_API_KEY=fc-...
FIRECRAWL_BASE_URL=https://api.firecrawl.dev

# Perplexity (Research answers)
PERPLEXITY_API_KEY=pplx-...

# =============================================================================
# INTEGRATIONS & APIS
# =============================================================================

# GitHub (PR bots, content management)
GITHUB_TOKEN=ghp_...
GITHUB_APP_ID=your-app-id
GITHUB_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----...

# Intercom (Support widget & user journeys)
INTERCOM_TOKEN=your-intercom-token
INTERCOM_APP_ID=your-app-id

# Adobe Express (Marketing creatives)
ADOBE_EXPRESS_TOKEN=your-adobe-token
ADOBE_EXPRESS_CLIENT_ID=your-client-id
ADOBE_EXPRESS_CLIENT_SECRET=your-client-secret

# Asana (Team tasking)
ASANA_TOKEN=your-asana-token
ASANA_WORKSPACE_ID=your-workspace-id

# Notion (Writer workspace)
NOTION_TOKEN=secret_...
NOTION_DATABASE_ID=your-database-id

# Zapier (RevOps automations)
ZAPIER_HOOK_URL=https://hooks.zapier.com/hooks/catch/...
ZAPIER_WEBHOOK_SECRET=your-webhook-secret

# V0 (UI scaffolder)
V0_API_KEY=v0_...

# =============================================================================
# PAYMENT & BILLING
# =============================================================================

# Stripe (Billing & subscriptions)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_ID_PRO=price_...
STRIPE_PRICE_ID_FAMILY=price_...

# =============================================================================
# MCP SERVER CONFIGURATIONS
# =============================================================================

# MCP Orchestrator
MCP_ORCHESTRATOR_PORT=3000
MCP_ORCHESTRATOR_HOST=localhost
MCP_LOG_LEVEL=info

# Server Health Checks
MCP_HEALTH_CHECK_INTERVAL=30000
MCP_HEALTH_CHECK_TIMEOUT=10000

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Core Features
LM_USE_LOCAL_STT=false
LM_COACH_REASONING_MODEL=deepseek-r1
LM_TRANSLATE_PROVIDER=gemini
LM_RAG_ENABLED=true
LM_CI_SMOKE_ENABLED=true

# Performance Tuning
LM_MAX_CONCURRENT_SESSIONS=100
LM_SESSION_TIMEOUT_MS=300000
LM_CACHE_TTL_SECONDS=3600

# =============================================================================
# SECURITY & COMPLIANCE
# =============================================================================

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key
JWT_SECRET=your-jwt-secret-key

# Rate Limiting
RATE_LIMIT_RPS=10
RATE_LIMIT_BURST=20

# Data Retention
DATA_RETENTION_DAYS=90
PII_REDACTION_ENABLED=true

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Environment
NODE_ENV=development
LOG_LEVEL=debug

# Testing
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/linguamate_test
TEST_SUPABASE_URL=https://test-project.supabase.co
TEST_SUPABASE_ANON_KEY=test-key

# Mock Services (for testing)
MOCK_LLM_RESPONSES=true
MOCK_TTS_RESPONSES=true
MOCK_PAYMENT_WEBHOOKS=true

# =============================================================================
# DEPLOYMENT & INFRASTRUCTURE
# =============================================================================

# Docker
DOCKER_REGISTRY=your-registry.com
DOCKER_IMAGE_TAG=latest

# Kubernetes
K8S_NAMESPACE=linguamate
K8S_CLUSTER=production

# CDN
CDN_URL=https://cdn.linguamate.ai
CDN_API_KEY=your-cdn-key

# =============================================================================
# EXTERNAL SERVICE ENDPOINTS
# =============================================================================

# API Endpoints
API_BASE_URL=https://api.linguamate.ai
WEBHOOK_BASE_URL=https://webhooks.linguamate.ai

# Frontend URLs
WEB_APP_URL=https://linguamate.ai
MOBILE_APP_SCHEME=linguamate

