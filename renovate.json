{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "labels": ["deps", "renovate"],
  "rangeStrategy": "bump",
  "timezone": "Europe/London",
  "prHourlyLimit": 4,
  "prConcurrentLimit": 10,
  "enabledManagers": ["npm"],
  "packageRules": [
    { "matchManagers": ["npm"], "groupName": "all npm minor/patch" },
    { "matchDepTypes": ["devDependencies"], "automerge": true, "automergeType": "branch" }
  ],
  "rebaseWhen": "conflicted"
}
